	'myservice' => new App\Model\MyCustomService('foobar'),
]);
```


–†–∞–∑–Ω—ã–µ —Å—Ä–µ–¥—ã .[#toc-different-environments]
===========================================

–ù–µ —Å—Ç–µ—Å–Ω—è–π—Ç–µ—Å—å –Ω–∞—Å—Ç—Ä–∞–∏–≤–∞—Ç—å –∫–ª–∞—Å—Å `Bootstrap` –≤ —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤–∏–∏ —Å –≤–∞—à–∏–º–∏ –ø–æ—Ç—Ä–µ–±–Ω–æ—Å—Ç—è–º–∏. –í—ã –º–æ–∂–µ—Ç–µ –¥–æ–±–∞–≤–∏—Ç—å –ø–∞—Ä–∞–º–µ—Ç—Ä—ã –≤ –º–µ—Ç–æ–¥ `bootWebApplication()`, —á—Ç–æ–±—ã —Ä–∞–∑–ª–∏—á–∞—Ç—å –≤–µ–±-–ø—Ä–æ–µ–∫—Ç—ã. –¢–∞–∫–∂–µ –º–æ–∂–Ω–æ –¥–æ–±–∞–≤–∏—Ç—å –¥—Ä—É–≥–∏–µ –º–µ—Ç–æ–¥—ã, –Ω–∞–ø—Ä–∏–º–µ—Ä `bootTestEnvironment()` –¥–ª—è –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏ –æ–∫—Ä—É–∂–µ–Ω–∏—è –¥–ª—è –º–æ–¥—É–ª—å–Ω—ã—Ö —Ç–µ—Å—Ç–æ–≤, `bootConsoleApplication()` –¥–ª—è —Å–∫—Ä–∏–ø—Ç–æ–≤, –≤—ã–∑—ã–≤–∞–µ–º—ã—Ö –∏–∑ –∫–æ–º–∞–Ω–¥–Ω–æ–π —Å—Ç—Ä–æ–∫–∏, –∏ —Ç–∞–∫ –¥–∞–ª–µ–µ.

```php
public function bootTestEnvironment(): Nette\DI\Container
{
	Tester\Environment::setup(); // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è —Ç–µ—Å—Ç–µ—Ä–∞ Nette Tester
	$this->setupContainer();
	return $this->configurator->createContainer();
}

public function bootConsoleApplication(): Nette\DI\Container
{
	$this->configurator->setDebugMode(false);
	$this->initializeEnvironment();
	$this->setupContainer();
	return $this->configurator->createContainer();
}
```
