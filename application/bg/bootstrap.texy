		// –∏–ª–∏ –º–æ–∂–µ—Ç–µ –¥–∞ –≥–æ —Ä–∞–∑—Ä–µ—à–∏—Ç–µ –∑–∞ –∫–æ–Ω–∫—Ä–µ—Ç–µ–Ω IP –∞–¥—Ä–µ—Å, –∫–∞—Ç–æ —Ä–∞–∑–∫–æ–º–µ–Ω—Ç–∏—Ä–∞—Ç–µ —Å–ª–µ–¥–Ω–∏—è —Ä–µ–¥:
		// $this->configurator->setDebugMode('secret@23.75.345.200');

		// –ê–∫—Ç–∏–≤–∏—Ä–∞ Tracy: —É–ª—Ç–∏–º–∞—Ç–∏–≤–Ω–∏—è—Ç "—à–≤–µ–π—Ü–∞—Ä—Å–∫–∏ –Ω–æ–∂" –∑–∞ –¥–µ–±—ä–≥–≤–∞–Ω–µ.
		$this->configurator->enableTracy($this->rootDir . '/log');

		// RobotLoader: –∞–≤—Ç–æ–º–∞—Ç–∏—á–Ω–æ –∑–∞—Ä–µ–∂–¥–∞ –≤—Å–∏—á–∫–∏ –∫–ª–∞—Å–æ–≤–µ –≤ –∏–∑–±—Ä–∞–Ω–∞—Ç–∞ –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—è
		$this->configurator->createRobotLoader()
			->addDirectory(__DIR__)
			->register();
	}

	private function setupContainer(): void
	{
		// –ó–∞—Ä–µ–∂–¥–∞ –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–æ–Ω–Ω–∏—Ç–µ —Ñ–∞–π–ª–æ–≤–µ
